{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "30s",
    "max_result_window": 10000,
    "analysis": {
      "analyzer": {
        "chinese_analyzer": {
          "type": "standard",
          "stopwords": "_none_"
        },
        "vietnamese_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "long"
      },
      "hanzi": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "pinyin": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "meaning": {
        "type": "text",
        "analyzer": "vietnamese_analyzer"
      },
      "example": {
        "type": "text",
        "analyzer": "standard"
      },
      "variant": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "hskLevel": {
        "type": "integer"
      },
      "frequencyRank": {
        "type": "integer"
      },
      "searchText": {
        "type": "text",
        "analyzer": "standard"
      },
      "createdAt": {
        "type": "date"
      },
      "updatedAt": {
        "type": "date"
      }
    }
  }
}

